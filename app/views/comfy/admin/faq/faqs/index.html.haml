.page-header
  = link_to 'New Faq', new_comfy_admin_faq_path(@site), class: 'btn pull-right'
  %h2 Faqs

= paginate @faqs

%table.table.table-hover.table-bordered
  - @faqs.each do |faq|
    %tr
      %td.main
        = link_to faq.label, edit_comfy_admin_faq_path(@site, faq)
        .item-meta
          = faq.identifier
          %br
          = link_to '/', '/', target: '_blank'
      %td
        .btn-group.btn-group-sm
          = link_to pluralize(faq.categories.count, 'Category'), comfy_admin_faq_categories_path(@site, faq), class: 'btn btn-small btn-inverse'
      %td
        .btn-group.btn-group-sm
          = link_to 'Edit', edit_comfy_admin_faq_path(@site, faq), class: 'btn btn-default'
          = link_to 'Delete', comfy_admin_faq_path(@site, faq), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'

= paginate @faqs
